<html>
<head>

    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <style rel="stylesheet" href="stylesheets/style.css"></style>

</head>
<body>
<% if (messages.error) { %>
    <p style="color:red"><%- messages.error %></p>
<% } %>
<% if (messages.success) { %>
    <p style="color:green"><%- messages.success %></p>
<% } %>
<div class="container-fluid">
    <div id="response"></div>
</div>

<style>
    .error {
        color: red;
    }
</style>

<div class="card vh-100 " >
    <img src="images/ez.jpg" class="card-img img-fluid" alt="...">
    <div class="card-img-overlay">
    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <h2 class="text-uppercase text-center mb-5">Create an account</h2>

                            <form method="post" action="/admin-sign"   id="SignupForm">

                                <div class="mb-3">
                                    <input type="text" id="u_name" name="u_name"  class="form-control form-control-lg"
                                           data-rule-required="true"
                                           data-msg-required="*">
                                    <label class="form-label" for="u_name">Your Name</label>

                                </div>

                                <div class="mb-3">
                                    <input type="email" id="email" name="email"  class="form-control form-control-lg"
                                           data-rule-required="true"
                                           data-msg-required="*"/>
                                    <label class="form-label" for="email">Your Email</label>

                                </div>

                                <div class="mb-3">
                                    <input type="password" id="p_word"  name="p_word" class="form-control form-control-lg"
                                           data-rule-required="true"
                                           data-msg-required="*"/>
                                    <label class="form-label" for="p_word">Password</label>


                                </div>

                                <div class="mb-3">
                                    <input type="password" id="cp_word" name="cp_word"  class="form-control form-control-lg"
                                           data-rule-required="true"
                                           data-msg-required="*"/>
                                    <label class="form-label" for="cp_word">Repeat your password</label>

                                </div>



                                <div class="mb-3">
                                    <button type="submit" onclick="UserSignup()"
                                            class="btn btn-danger">Register</button>
                                </div>

                                <p class="text-center text-muted mt-5 mb-0">Have already an account? <a href="/admin-login"
                                                                                                        class="fw-bold text-body"><u>Login here</u></a></p>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</div>
